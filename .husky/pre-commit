#!/usr/bin/env sh
# . "$(dirname -- "$0")/_/husky.sh"

# Ensure swiftlint is in PATH
export PATH="$HOME/.local/bin:$PATH"

# Simplified pre-commit hook - run lint-staged for incremental checks
npx lint-staged

# Run TypeScript type checking (non-blocking)
echo "ğŸ”· Running TypeScript type check..."
npm run type-check || echo "âš ï¸  Type check had issues, but allowing commit"

# Run SwiftLint if available (optional for iOS development)
if command -v swiftlint >/dev/null 2>&1; then
  echo "ğŸ¦ Running SwiftLint..."
  npm run lint:swift || echo "âš ï¸  SwiftLint had warnings, but allowing commit"
else
  echo "âš ï¸  SwiftLint not installed, skipping Swift code linting"
fi

echo "Pre-commit checks complete! âœ…"